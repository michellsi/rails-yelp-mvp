<div class="container">
<h3>Review for <%= @restaurant.name %></h3>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 0..5, step: 1 %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
</div>
